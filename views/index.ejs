<html lang="en">
    <%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>
    
    <div class = "blogs content">
        <h1>All blogs</h1>

        <% if(blogs.length>0) { 
             blogs.forEach(blog => { %>

                <h2> <%=blog.title%> </h2>
                <p> <%=blog.snippet%> </p>
                
           <% }); 

           } else { %>
            <h2> sorry, no blogs to show </h2>
       <% } %>

    </div>
</body>
</html>